# Configuration minimale pour Révisia

# Clé secrète Django (génère une nouvelle clé pour la prod)
DJANGO_SECRET_KEY=your-secret-key-here

# Mode debug (False en production)
DEBUG=True

# Hôtes autorisés (séparés par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1

# URL de l'API OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# URL de base de données (vide = SQLite, sinon PostgreSQL/MySQL)
DATABASE_URL=

# Origines CORS autorisées (séparées par des virgules)
CORS_ALLOWED_ORIGINS=http://localhost:3000
